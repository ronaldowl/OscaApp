@using Microsoft.AspNetCore.Identity
@using OscaApp.Models

<style>
    .colorWhite{
        color:white;
    }
        .colorWhite:hover, .colorWhite:focus, .colorWhite:active{
            color:aliceblue;
            text-decoration:none;
        }
</style>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
        <a asp-controller="Paineis" asp-action="PainelAll" ><i class="fa fa-2x fa-globe colorWhite" style="margin-right:5px;"></i></a>&nbsp;&nbsp;&nbsp;       
 
            <i class="fa fa-2x fa-user colorWhite" style="margin-right:5px;"></i>
               <a class="colorWhite" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User) !</a>
            <button type="submit" class="btn btn-link colorWhite">Sair</button>&nbsp;&nbsp;&nbsp;
            <a asp-controller="Home" asp-action="About"><i class="fa fa-2x fa-question-circle-o colorWhite" style="margin-right:5px;"></i></a>
</form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrar</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Entrar</a></li>
    </ul>
}

