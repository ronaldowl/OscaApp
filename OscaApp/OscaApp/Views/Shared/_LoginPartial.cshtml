@using Microsoft.AspNetCore.Identity


<style>
    .colorWhite {
        color: white;
    }

        .colorWhite:hover, .colorWhite:focus, .colorWhite:active {
            color: aliceblue;
            text-decoration: none;
        }
</style>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
    <a asp-controller="Cliente" asp-action="GridCliente" asp-route-view="1"><i class="fa fa-2x fa-users colorWhite " data-toggle="tooltip" data-placement="bottom" title="Clientes" style="margin-right:5px;"></i></a>&nbsp;

    <a asp-controller="Contato" asp-action="GridContato"><i class="fa fa-2x fa-address-book  colorWhite" data-toggle="tooltip" data-placement="bottom" title="Agenda"  style="margin-right:5px;"></i></a>&nbsp;

    <a asp-controller="BalcaoVendas" asp-action="BalcaoVendas"><i class="fa fa-2x fa-cart-plus colorWhite" data-toggle="tooltip" data-placement="bottom" title="Balcao Vendas"  style="margin-right:5px;"></i></a>&nbsp;

    <a asp-controller="Paineis" asp-action="PainelOperacional"><i class="fa fa-2x fa-cogs colorWhite" data-toggle="tooltip" data-placement="bottom" title="Operacional"  style="margin-right:5px;"></i></a>&nbsp;
    <a asp-controller="Paineis" asp-action="PainelAll"><i class="fa fa-2x fa-globe colorWhite" data-toggle="tooltip" data-placement="bottom" title="Painel Global"  style="margin-right:5px;"></i></a>&nbsp;
    <i class="fa fa-2x fa-user colorWhite" style="margin-right:5px;"></i>
    <a class="colorWhite" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User) !</a>
    <button type="submit" class="btn btn-link colorWhite">Sair</button>&nbsp;&nbsp;&nbsp;
    <a asp-controller="Home" asp-action="About" data-toggle="modal" data-target="#about"><i class="fa fa-2x fa-question-circle-o colorWhite" data-toggle="tooltip" data-placement="bottom" title="Versao atual"  style="margin-right:5px;"></i></a>
</form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrar</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Entrar</a></li>
    </ul>
}



