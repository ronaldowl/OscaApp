@model OscaApp.ViewModels.ImpressaoPedidoRetiradaViewModel
@using OscaFramework.Helper
    @{
        Layout = "_LayoutImpressao";
    }
    <header>
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>@Model.organizacao.nomeAmigavel</h1>
                <h2>Contato: @Model.organizacao.TelefoneEmpresa </h2>
            </div>
        </div>
    </header>
    <main>
        <div class="row mt-4">
            <div class="col-12">
                <h5 class="text-center">CAÇAMBA ESTACIONÁRIA PARA RETIRADA DE ENTULHO</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form action="">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Pedido Nº:</span>
                                </div>
                                <input type="text" asp-for="@Model.pedidoRetirada.codigo" id="numPedido" name="numPedido" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Data Entrega:</span>
                                </div>
                                <input type="text" id="data" asp-for="@Model.pedidoRetirada.dataEntrega" name="data" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Horário:</span>
                                </div>
                                <input type="text" id="horario" value="@HelperEnum.FormatEnumPeriodo(Model.pedidoRetirada.periodo)" name="horario" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Cliente:</span>
                                </div>
                                <input type="text" id="responsavel" asp-for="@Model.cliente.nomeCliente" name="responsavel" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Telefone:</span>
                                </div>
                                <input type="text" id="telefone" asp-for="@Model.cliente.telefone" name="telefone" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Endereço:</span>
                                </div>
                                <input type="text" id="endEntrega" value="@Model.endereco.logradouro Nº @Model.endereco.numero" name="endEntrega" class="form-control" >
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Bairro:</span>
                                </div>
                                <input type="text" id="bairro" for="" name="bairro" class="form-control" value="@Model.endereco.bairro" >
                            </div>
                        </div>
                    </div>
                    @if(Model.endereco2.logradouro != null)
                    {
                    <div class="row">
                        <div class="col-md-8 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Endereço 2:</span>
                                </div>
                                <input type="text" id="endEntrega2" value="@Model.endereco2.logradouro Nº @Model.endereco2.numero" name="endEntrega" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Bairro:</span>
                                </div>
                                <input type="text" id="bairro2" for="" name="bairro" class="form-control" value="@Model.endereco2.bairro">
                            </div>
                        </div>
                    </div>
                    }
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Valor Total:</span>
                                </div>
                                <input type="text" id="vlrUnitario" asp-for="@Model.pedidoRetirada.valorTotal" name="vlrUnitario" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">QTD Caçamba:</span>
                                </div>
                                <input type="text" id="numCacamba" name="numCacamba" class="form-control" asp-for="@Model.pedidoRetirada.quantidade">
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Retirada:</span>
                                </div>
                                <input type="text" id="dataRetirada" name="dataRetirada" class="form-control" asp-for="@Model.pedidoRetirada.dataRetirada">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Obs</span>
                                </div>
                                <textarea class="form-control" asp-for="@Model.pedidoRetirada.anotacao" rows="5"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <h5 class="fonte-kac text-center">IMPORTANTE!</h5>
            </div>
            <div class="col-12 my-1">
                <p>
                    @Model.orgConfig.mensagemPedido
                </p>

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4 border-top mt-2 offset-1">
                <p class="text-center">Recebido por</p>
            </div>
            <div class="col-4 border-top mt-2 offset-2">
                <p class="text-center">Representante</p>
