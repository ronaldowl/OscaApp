@model X.PagedList.PagedList<OscaFramework.Models.Atividade>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-1">
            <br />
            <div class="card  " id="osc_Grid">
                <div class="card-header">
                    <div class="card-title">
                        <form class="form-inline">
                            <table>
                                <tr>
                                    <td>
                                        <h5 style="font-weight:bold">Lista de Atividades: &nbsp;&nbsp;</h5>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info btn-lg fa fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateAtividade", "Atividade", null)'"> <span>Novo</span></button>
                                            </label>
                                            &nbsp;&nbsp;
                                            <span>
                                                @Html.TextBox("filtro", "", new { @class = "form-control ", @style = "max-width:none;", placeholder = "Pesquisar", id = "grid" })
                                            </span>
                                            <button type="submit" class="btn btn-info fa fa-search"></button>
                                            &nbsp;&nbsp;
                                            <label>
                                                <button id="osc_recarregar" type="submit" class="btn btn-info btn-lg fa fa-remove" value="Limpar" onclick="RecarregarGrid()"> <span>Limpar</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                            <table class="table table-hover table-striped table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Assunto</th>
                                        <th>Data alvo</th>
                                        <th>Tipo</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr id="@item.id" onclick="location.href='@Url.Action("FormUpdateAtividade", "Atividade", new {id = item.id })'">
                                        <td><i class="fa fa-file-archive-o"></i></td>
                                        <td>@Html.ActionLink(item.assunto, "FormUpdateAtividade", new { id = item.id })</td>
                                        <td>@item.dataAlvo</td>
                                        <td>@item.tipo</td>
                                    </tr>
                                }
                            </table>
                            <div>
                                <table>
                                    <tr>
                                        <td style="width:75%">@Html.PagedListPager((IPagedList)Model, page => Url.Action("GridAtividade", "Atividade", new { page }))</td>
                                        <td><h5>Registros de @Model.FirstItemOnPage até  @Model.LastItemOnPage - Total:@Model.TotalItemCount</h5></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<br /><br /><br /><br /><br /><br /><br /><br /> <br /><br /><br /><br /><br />
<div class="col-md-10 offset-1" style="position:sticky;bottom:20px; padding:10px 0 0 0; background:#fff;">
    <div class="row">
        <div style="background-color:darkgrey; width:100%; height:10px;"></div>

        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-cog iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelOperacional"><h6>Operacional</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-money iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelFinanceiro"><h6>Financeiro</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-handshake-o iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelVendas"><h6>Vendas</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-wrench iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelServico"><h6>Serviços</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>