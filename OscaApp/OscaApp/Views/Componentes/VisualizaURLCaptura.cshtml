@model OscaApp.ViewModels.PaginaClienteViewModel
@{
    Layout = "_LayoutFrame";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Fechar</span></button>
        </div>
        <div class="modal-body">
            <div class="card " id="osc_MainForm">
                <div class="card-header">
                    <div class="card-title">
                        <table>
                            <tr>
                                <td><h3>URL da Página de Captura:&nbsp;&nbsp;</h3></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-11">
                            <div class="form-group">
                                <label>Copie toda a URL e cole no seu navegador para testar, depois envie para seu Cliente!</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-comment-o fa-2x"></span>
                                    </span> &nbsp;
                                    <input id="osc_url" asp-for="@Model.urlPaginaCaptura" class="form-control"  placeholder="..."  style="font-size:10px"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
</div>

