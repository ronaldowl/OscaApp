@model OscaApp.ViewModels.UsuarioViewModel

<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)
</div>
    <div class="row">
        <div class="col-md-11">
            @if (!String.IsNullOrEmpty(Model.StatusMessage))
            {

                <div class="alertPers alert alert-success alert-dismissible alert-dismissiblePers" role="alert">
                    <button type="button" class="closePers close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.StatusMessage
                </div>
            }
                <form action="FormUpdateListaPreco" method="post" id="FormUpdateUsuario">
                    <div class="card" id="osc_MainForm">
                        <div class="card-header">
                            <div class="card-title ">
                                <table>
                                    <tr>
                                        <td><h5>Usuário: &nbsp;&nbsp;</h5></td>
                                        <td>
                                            <div id="osc_barrabotoes">
                                                <label>
                                                    <button id="osc_salvar" type="submit" class="btn btn-info btn-sm fa fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                                </label>&nbsp;
                                                <label>
                                                    <button id="osc_fechar" type="button" class="btn btn-info  btn-sm fa fa-1x fa-close" value="Fechar" onclick="location.href='@Url.Action("GridUsuario", "Usuario" , null)'"> <span>Fechar</span></button>
                                                </label>&nbsp;
                                                <label>
                                                    <button id="osc_novo" type="button" class="btn btn-info btn-sm fa fa-plus" value="Novo" onclick="location.href='@Url.Action("RegisterUser", "Account", new {idOrganizacao = @Model.contexto.idOrganizacao })'"> <span>Novo</span></button>
                                                </label>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="card-body">
                            <input id="osc_id" asp-for="usuario.Id" type="hidden" class="form-control" value="@Model.usuario.Id" />
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Nome Amigável</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_nomeAmigavel" asp-for="@Model.usuario.nomeAmigavel" placeholder="Nome" class="form-control" type="text" >
                                            </div>
                                        </div>
                                    </div>                           

                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Nome</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_nome" asp-for="@Model.usuario.UserName" placeholder="Nome" class="form-control" type="text" disabled="disabled">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Email</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_email" asp-for="@Model.usuario.Email" class="form-control" type="text" >
                                            </div>
                                        </div>
                                    </div>                        
                                </div>
                                <div class="col-md-3">                           
                                    <div class="form-group">
                                        <label class="control-label">Habilitado?</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card" id="osc_FormSegurança">
                        <div class="card-header">
                            <h5> Segurança - Controle de acesso aos módulos: &nbsp;&nbsp;</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Vendas</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Financeiro</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Serviço</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card" id="osc_FormRegistro">
                        <div class="card-header">
                            <h5> Segurança - Controle de acesso aos registros: &nbsp;&nbsp;</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Todos Atendimentos</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Todas Ordens</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Todos Pedidos</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox"  >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label">Todos Agendamentos</label>
                                        <div class="inputGroupContainer">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                                <input id="osc_LockoutEnabled" asp-for="@Model.usuario.LockoutEnabled" class="form-control" type="checkbox"  >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
        </div>
    </div>


