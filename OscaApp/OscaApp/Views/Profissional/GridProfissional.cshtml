@model X.PagedList.PagedList<OscaFramework.Models.Profissional>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
<div class="container-fluid">
    <div class="row">
        <div class="col-md-11 offset-1">
            <div class="card" id="osc_Grid">
                <div class="card-header">
                    <div class="card-title">
                        <form class="form-inline">
                            <table>
                                <tr>
                                    <td>
                                        <h5 style="font-weight:bold">Lista de Profissionais: &nbsp;&nbsp;</h5>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info btn-lg fa fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateProfissional", "Profissional", null)'"> <span>Novo</span></button>
                                            </label>
                                            &nbsp;&nbsp;
                                            <span>
                                                @Html.TextBox("filtro", "", new { @class = "form-control ", @style = "max-width:none;", placeholder = "Pesquisar", id = "grid" })
                                            </span>
                                            <button type="submit" class="btn btn-info fa fa-search"></button>
                                            &nbsp;&nbsp;
                                            <label>
                                                <button id="osc_recarregar" type="submit" class="btn btn-info btn-lg fa fa-remove" value="Limpar" onclick="RecarregarGrid()"> <span>Limpar</span></button>
                                            </label>&nbsp;&nbsp;
                                            <label>
                                                <button id="osc_back" type="button" class="btn btn-info btn-lg fa fa-backward" value="voltar" onclick="location.href='@Url.Action("PainelServico", "Paineis", null)'"> <span>Painel Serviços</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-11">
                            <table class="table table-hover   table-bordered table-sm ">
                                <thead class="thead-light">
                                    <tr>
                                        <th></th>
                                        <th>Código</th>
                                        <th>Profissional</th>
                                        <th>Nº Conta</th>
                                        <th>Agência</th>
                                        <th>Comissionado?</th>
                                        <th>% de comissão</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                    {
                                    <tr id="@item.id" onclick="location.href='@Url.Action("FormUpdateProfissional", "Profissional", new {id = item.id })'">
                                        <td><i class="fa fa-black-tie"></i></td>
                                        <td>@Html.ActionLink(item.codigo.ToString(), "FormUpdateProfissional", new { id = item.id })</td>
                                        <td>@item.nomeProfissional</td>
                                        <td>@item.numeroConta</td>
                                        <td>@item.agencia</td>
                                        <td>@item.comissionado</td>
                                        <td>@item.percentualComissao</td>
                                    </tr>
                                    }
                            </table>

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <table>
                        <tr>
                            <td style="width:75%">@Html.PagedListPager((IPagedList)Model, page => Url.Action("GridProfissional", "Profissional", new { page }))</td>
                            <td><h5>Registros de @Model.FirstItemOnPage até  @Model.LastItemOnPage - Total:@Model.TotalItemCount</h5></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br /><br /><br /><br /> <br /><br /><br /><br /><br /><br /><br /><br /> <br /><br /><br /><br />
<div class="row" style="position:sticky;bottom:40px; padding:10px 0 0 0; background:#fff;    ">
    <div style="background-color:darkgrey; width: 100%; height:10px;"></div>

    <div class="col-md-3">
        <div class="card m-2">
            <table>
                <tr>
                    <td><span class="fa fa-2x fa-cog iconPanel"></span></td>
                    <td><a asp-controller="Paineis" asp-action="PainelOperacional"><h6>Operacional</h6></a></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card m-2">
            <table>
                <tr>
                    <td><span class="fa fa-2x fa-money iconPanel"></span></td>
                    <td><a asp-controller="Paineis" asp-action="PainelFinanceiro"><h6>Financeiro</h6></a></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card m-2">
            <table>
                <tr>
                    <td><span class="fa fa-2x fa-handshake-o iconPanel"></span></td>
                    <td><a asp-controller="Paineis" asp-action="PainelVendas"><h6>Vendas</h6></a></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card m-2">
            <table>
                <tr>
                    <td><span class="fa fa-2x fa-wrench iconPanel"></span></td>
                    <td><a asp-controller="Paineis" asp-action="PainelServico"><h6>Serviços</h6></a></td>
                </tr>
            </table>
        </div>
    </div>
</div>
 
