@model OscaApp.ViewModels.ProfissionalViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)
    @Html.HiddenFor(m => m.profissional.id)
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <form action="FormUpdateProfissional" method="post" id="FormUpdateProfissional">
                <div class="card  " id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title">
                            <table>
                                <tr>
                                    <td><h3>Profissional:&nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-lg fa fa-1x fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>

                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info  btn-lg fa fa-1x fa-close" value="Fechar" onclick="location.href='@Url.Action("GridProfissional", "Profissional" , null)'"> <span>Fechar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info  btn-lg fa fa-1x fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateProfissional", "Profissional", null)'"> <span>Novo</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_inativa" type="button" class="btn btn-info btn-lg fa fa-ban fa-1x" value="Inativar"> <span>Inativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Ativar" type="button" class="btn btn-info btn-lg fa fa-check-circle-o fa-1x" value="Ativar"> <span>Ativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Deletar" type="button" class="btn btn-info btn-lg fa fa-times-circle-o fa-1x" value="Deletar"> <span>Excluir</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <input id="osc_id" asp-for="profissional.id" type="hidden" class="form-control" value="@Model.profissional.id" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Código</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-asterisk fa-1x"></span>
                                        </span>
                                        <input id="osc_codigo" asp-for="@Model.profissional.codigo" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Nome*</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-o fa-1x"></span>
                                        </span>
                                        <input id="osc_nome" asp-for="@Model.profissional.nomeProfissional" type="text" class="form-control" required="required" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Tipo Conta</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-briefcase fa-1x"></span>
                                        </span>
                                        <select id="osc_tipoConta" asp-for="@Model.profissional.tipoConta" class="form-control">
                                            <option value="1" selected="">Conta Corrente</option>
                                            <option value="2">Poupança</option>
                                            <option value="3">Salário</option>
                                            <option value="4">Outros</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Agência</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-at fa-1x"></span>
                                        </span>
                                        <input id="osc_agencia" asp-for="@Model.profissional.agencia" type="text" class="form-control" placeholder="agencia" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Número da conta</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-at fa-1x"></span>
                                        </span>
                                        <input id="osc_NumConta" asp-for="@Model.profissional.numeroConta" type="text" class="form-control" placeholder="número da conta" />
                                    </div>
                                </div>
                             
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Comissionado</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-briefcase fa-1x"></span>
                                        </span>
                                        <select id="osc_comissionado" asp-for="@Model.profissional.comissionado" class="form-control">
                                            <option value="false" selected="">Não</option>
                                            <option value="true">Sim</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Percentual de Comissão</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-percent fa-1x"></span>
                                        </span>
                                        <input id="osc_perComissao" asp-for="@Model.profissional.percentualComissao" class="form-control" placeholder="Percentual de comissão" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />   <br />   
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Criado Por</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-user"></span>
                                </span>
                                <input id="osc_criadoPor" asp-for="@Model.profissional.criadoPorName" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Criado Em</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar fa-1x"></span>
                                </span>
                                <input id="osc_criadoEm" asp-for="@Model.profissional.criadoEm" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Modificado Por</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-user"></span>
                                </span>
                                <input id="osc_modificadoPor" asp-for="@Model.profissional.modificadoPorName" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Modificado Em</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar fa-1x"></span>
                                </span>
                                <input id="osc_modificadoEm" asp-for="@Model.profissional.modificadoEm" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Status</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-exclamation fa-1x"></span>
                                </span>
                                <input id="osc_status" asp-for="@Model.profissional.status" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
