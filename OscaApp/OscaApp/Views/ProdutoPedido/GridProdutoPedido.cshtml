@model X.PagedList.PagedList<OscaApp.Models.ProdutoPedido>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@{
    Layout = "_LayoutFrame";
}
            <div class="card" id="osc_Grid">

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-11">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Código Produto</th>
                                        <th>Nome Produto</th>
                                        <th>Quantidade</th>
                                        <th>Tipo Desconto</th>
                                        <th>Valor</th>
                                        <th> </th>
                                        <th> </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.status</td>
                                        <td>@item.valor</td>
                                        <td>@item.quantidade</td>
                                        <td>@item.tipoDesconto</td>
                                        <td>@item.valor</td>
                                        <td>
                                            <div class="form-group col-md-2">
                                                <button id="osc_edit" type="button" class="btn btn-info btn-lg fa fa-edit" value="voltar" onclick="location.href='@Url.Action("FormUpdateProdutoPedido", "ProdutoPedido", new { idProdutoPedido = Model[0].id})'"> <span>Editar</span></button>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-group col-md-2">
                                                <button id="osc_remove" type="button" class="btn btn-info btn-lg fa fa-remove" value="voltar" onclick="location.href='@Url.Action("DeleteProdutoPedido", "ProdutoPedido", new { idProdutoPedido = Model[0].id, idPedido = Model[0].idPedido })'"> <span>Remover</span></button>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                            </table>
                            <div>
                                <table>
                                    <tr>
                                        <td style="width:75%">@Html.PagedListPager((IPagedList)Model, page => Url.Action("GridPedido", "Pedido", new { page }))</td>
                                        <td><h5>Registros de @Model.FirstItemOnPage até  @Model.LastItemOnPage - Total:@Model.TotalItemCount</h5></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         

 