                    </table>
                </div>
            </div>
            <div class="panel panel-success" id="osc_servico">
                <div class="panel-heading">
                    <div class="panel-title">Serviços Contratados</div>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Data</th>

                            </tr>
                        </thead>
