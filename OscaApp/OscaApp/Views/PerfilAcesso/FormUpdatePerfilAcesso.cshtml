@model OscaApp.ViewModels.PerfilAcessoViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.Contexto.idOrganizacao)
    @Html.HiddenFor(m => m.Contexto.organizacao)
    @Html.HiddenFor(m => m.Contexto.idUsuario)
    @Html.HiddenFor(m => m.Contexto.nomeUsuario)
</div>
    <div class="row">
        <div class="col-md-11">
            @if (!String.IsNullOrEmpty(Model.StatusMessage))
            {

                <div class="alertPers alert alert-success alert-dismissible alert-dismissiblePers" role="alert">
                    <button type="button" class="closePers close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.StatusMessage
                </div>
            }
            <form action="FormUpdatePerfilAcesso" method="post" id="FormUpdatePerfilAcesso">
                <div class="card" id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title ">
                            <table>
                                <tr>
                                    <td><h3>Perfil de Acesso: &nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-sm fa fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info  btn-sm fa fa-1x fa-close" value="Fechar" onclick="location.href='@Url.Action("GridPerfilAcesso", "PerfilAcesso" , null)'"> <span>Fechar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info  btn-sm fa fa-1x fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreatePerfilAcesso", "PerfilAcesso", null)'"> <span>Novo</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <input id="osc_id" asp-for="perfilAcesso.id" type="hidden" class="form-control" value="@Model.perfilAcesso.id" />
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Nome</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span>&nbsp;
                                            <input id="osc_nome" asp-for="@Model.perfilAcesso.nome" placeholder="Nome" class="form-control" type="text" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Permite Painel Vendas ?</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-check-square fa-2x"></i></span>&nbsp;
                                            <input asp-for="@Model.perfilAcesso.permitePainelVendas" class="form-control" type="checkbox">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Criado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoPor" asp-for="@Model.perfilAcesso.criadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Criado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoEm" asp-for="@Model.perfilAcesso.criadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Modificado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoPor" asp-for="@Model.perfilAcesso.modificadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Modificado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoEm" asp-for="@Model.perfilAcesso.modificadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

 