@model ChangePasswordViewModel
@*@{
        ViewData["Title"] = "Troca de senha";
        ViewData.AddActivePage(ManageNavPages.ChangePassword);
    }*@

<div>
    @Html.Partial("_StatusMessage", Model.StatusMessage)
</div>
<div class="row">
    <div class="col-md-5 offset-3 card-body">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <table>
                        <tr>
                            <td><center><h4>Informações do usuário</h4></center></td>
                            <td>
                                <label>

                                    <button type="submit" class="btn btn-info btn-sm fa fa-save">Atualizar Senha</button>
                                </label>
                            </td>
                            <td style="width:10px"></td>
                            <td>
                                &nbsp;&nbsp;
                                <label>
                                    <button id="osc_voltar" type="button" class="btn btn-info btn-sm fa fa-backward" onclick="history.back();"> <span>Voltar</span></button>
                                </label>
                            </td>

                        </tr>
                    </table>


                </div>


                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Senha antiga</label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Nova Senha</label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Confirme a Senha</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </form>

    </div>
    <div class="col-md-3">
        <br />
        <br />
        <br />

        <label style="color:orangered">Digite uma senha com no mínimo 6 caracteres e possua pelo menos uma letra maiúscula</label>
    </div>

</div><br /><br /><br /><br />
<br />
<br />
<br />
<br />
<div class="container">
    <!-- END OF NAVIGATION BAR -->
    <div class="row" style="position:sticky;bottom:35px; padding:10px 0 0 0; background:#fff;">
        <div style="background-color:darkgrey; width: 100%; height:10px;"></div>

        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-money iconPanel" aria-hidden="true"></i></td>

                            <td><a asp-controller="Paineis" asp-action="PainelFinanceiro"><h6>Financeiro</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td>
                                <i class="fa fa-2x fa-handshake-o iconPanel" aria-hidden="true"></i>
                            </td>
                            <td>
                                <a asp-controller="Paineis" asp-action="PainelVendas"><h6>Vendas</h6></a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-wrench iconPanel" aria-hidden="true"></i></td>
                            <td><a asp-controller="Paineis" asp-action="PainelServico"><h6>Serviços</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-cogs iconPanel" aria-hidden="true"></i></td>
                            <td><a asp-controller="Paineis" asp-action="PainelConfiguracoes"><h6>Configurações</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

