@model IndexViewModel
@*@{
        ViewData["Title"] = "Profile";
        ViewData.AddActivePage(ManageNavPages.Index);
    }*@

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-5 offset-4">
        <div class="card">

            <form method="post">
                <div class="card-header">
                    <table>
                        <tr>
                            <td><center><h4>Informações do usuário</h4></center></td>
                            <td>
                                <label>
                                    <button type="submit" class="btn btn-info btn-sm fa fa-save">Salvar</button>
                                </label>
                            </td>
                            <td style="width:10px"></td>
                            <td>
                                &nbsp;&nbsp;
                                <label>
                                    <button id="osc_voltar" type="button" class="btn btn-info btn-sm fa fa-backward" onclick="history.back();"> <span>Voltar</span></button>
                                </label>
                            </td>

                        </tr>
                    </table>


                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label> Nome</label>
                    <input asp-for="NomeAmigavel" class="form-control" />
                </div>
                <div class="form-group">
                    <label> E-mail de Login</label>
                    <input asp-for="Username" class="form-control" disabled="disabled" />
                </div>
                <div class="form-group">
                    <label>E-mail de Alerta</label>
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" />
                            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                        </div>
                    }
                    else
                    {
                        <input asp-for="Email" class="form-control" />
                    }
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


            </form>
        </div>
    </div>
</div>
<br />
<br />
<br /><br /><br /> <br /><br /><br /><br /><br /><br />
<!-- END OF NAVIGATION BAR -->

    <div class="row" style="position:sticky;bottom:35px; padding:10px 0 0 0; background:#fff;">
        <div style="background-color:darkgrey; width: 100%; height:10px;"></div>

        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-money iconPanel" aria-hidden="true"></i></td>

                            <td><a asp-controller="Paineis" asp-action="PainelFinanceiro"><h6>Financeiro</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td>
                                <i class="fa fa-2x fa-handshake-o iconPanel" aria-hidden="true"></i>
                            </td>
                            <td>
                                <a asp-controller="Paineis" asp-action="PainelVendas"><h6>Vendas</h6></a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-wrench iconPanel" aria-hidden="true"></i></td>
                            <td><a asp-controller="Paineis" asp-action="PainelServico"><h6>Serviços</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-cogs iconPanel" aria-hidden="true"></i></td>
                            <td><a asp-controller="Paineis" asp-action="PainelConfiguracoes"><h6>Configurações</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>


