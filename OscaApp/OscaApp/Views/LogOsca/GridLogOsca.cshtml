@model  List<OscaApp.framework.LogOsca>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-11 offset-1">
            <br />
            <div class="card" id="osc_Grid">
                <div class="card-header">
                    <div class="card-title">
                        <table>
                            <tr>
                                <td>
                                    <h5 style="font-weight:bold">Logs OSCA: &nbsp;&nbsp;</h5>
                                </td>
                                <td>
                                    <form class="form-inline">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <button id="osc_recarregar" type="submit" class="btn btn-info btn-lg fa fa-refresh" onclick="RecarregarGrid()"> <span>Recarregar</span></button>
                                            </div>
                                        </div>
                                        <div class="col-md-2 offset-3">
                                            <div class="form-group">
                                                <button id="osc_back" type="button" class="btn btn-info btn-lg fa fa-backward" onclick="location.href='@Url.Action("PainelOperacional", "Paineis", null)'"> <span>Painel Operacional</span></button>
                                            </div>
                                        </div>

                                    </form>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-11">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID do usuário</th>
                                            <th>Evento</th>
                                            <th>Código da entidade</th>
                                            <th>Data de criação</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.ActionLink(item.idUsuario.ToString(), "FormViewLogOsca", new { id = item.id })</td>
                                            <td>@item.evento</td>
                                            <td>@item.codigoEntidade</td>
                                            <td>@item.dataCriacao</td>
                                        </tr>
                                    }
                                </table>
                                <div>
                                    <table>
                                        <tr>
                                            <td style="width:75%"> </td>
                                            <td><h5>Registros de  </h5></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/osc_cliente.js" asp-append-version="true"></script>
<script src="~/js/osc_global.js" asp-append-version="true"></script>
