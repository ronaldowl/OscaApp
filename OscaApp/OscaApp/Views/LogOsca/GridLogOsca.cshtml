@model List<OscaApp.framework.LogOsca>


<div class="row">
    <div class="col-md-12">
        
        <div class="card" id="osc_Grid">
            <div class="card-header">
                <div class="card-title">
                    <table>
                        <tr>
                            <td>
                                <h5 style="font-weight:bold" class="fa fa-2x fa-info-circle"> Logs OSCA: &nbsp;&nbsp;</h5>
                            </td>
                            <td>
                                <form class="form-inline">
                                    <div class="form-group  col-md-4">
                                        <div class="input-group">
                                            @Html.TextBox("filtro", "", new { @class = "form-control ", @style = "max-width:none;", placeholder = "Pesquisar", id = "grid" })
                                            <span class="input-group-btn ">
                                                <button type="submit" class="btn btn-info">
                                                    <span class="fa fa-search"></span>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <button id="osc_recarregar" type="submit" class="btn btn-info btn-lg fa fa-refresh" onclick="RecarregarGrid()"> <span>Recarregar</span></button>
                                        </div>
                                    </div>
                                    <div class="col-md-2 offset-3">
                                        <label>
                                            <button id="osc_back" type="button" class="btn btn-info btn-lg fa fa-backward" value="voltar" onclick="location.href='@Url.Action("PainelSuporte", "Paineis", null)'"> <span>Painel de Suporte</span></button>
                                        </label>&nbsp;&nbsp;
                                    </div>
                                </form>
                            </td>

                        </tr>
                    </table>
                </div>
                <div class="card-body">
                    <div class="row">
                        <table class="table table-hover table-striped table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Código de Erro</th>
                                    <th>ID</th>
                                    <th>ID do usuário</th>
                                    <th>Evento</th>
                                    <th>Código da entidade</th>
                                    <th>Data de criação</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr id="@item.id" onclick="location.href='@Url.Action("FormViewLogOsca", "LogOsca", new {id = item.id })'">
                                    <td><i class="fa fa-info-circle"></i></td>
                                    <td>@Html.ActionLink(item.codigoErro.ToString(), "FormViewLogOsca", new { id = item.id })</td>
                                    <td>@item.id</td>
                                    <td>@item.idUsuario</td>
                                    <td>@item.evento</td>
                                    <td>@item.codigoEntidade</td>
                                    <td>@item.dataCriacao.ToShortDateString()</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/js/osc_cliente.js" asp-append-version="true"></script>
<script src="~/js/osc_global.js" asp-append-version="true"></script>
