@model X.PagedList.PagedList<OscaApp.ViewModels.GridViewModels.BalcaoVendasGridViewModel>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@{
    Layout = "_LayoutFrame";
}


<table class="table table-hover   table-bordered table-sm">
    <thead class="thead-light">
        <tr style="font-size:12px">
            <th></th>
            <th style="width:100px">Código</th>
            <th style="width:400px">Valor Total</th>
        
           
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr style="font-size:12px" id="@item.balcaoVendas.id" onclick="ConfigLookup('@item.balcaoVendas.id.ToString()','@item.balcaoVendas.codigo') " data-dismiss="modal">
        <td><i class="fa  fa-users"></i></td>
        <td>@item.balcaoVendas.codigo.ToString()</td>
        <td>R$@item.balcaoVendas.valorTotal.ToString("N2")</td>           

    </tr>
    }
</table>

