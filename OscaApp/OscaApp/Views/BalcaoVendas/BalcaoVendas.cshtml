@model OscaApp.ViewModels.BalcaoVendasViewModel

<script>

    function CarregaFormStatusPedido() {
        $("#ModalStatusPedido").load("/Pedido/FormStatusPedido?id=" + '', function () {
            $("#ModalStatusPedido").modal("show");
        });
    }


    function Imprimir() {

    }

</script>

<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)

</div>

<div class="row">
    <div class="col-md-12">
        @if (!String.IsNullOrEmpty(Model.StatusMessage))
        {

            <div class="alertPers alert alert-success alert-dismissible alert-dismissiblePers" role="alert">
                <button type="button" class="closePers close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @Model.StatusMessage
            </div>
        }
        <form action="BalcaoVendas" method="post" id="BalcaoVendas">
            <div class="card " id="osc_MainForm">
                <div class="card-header">
                    <div class="card-title">
                        <table>
                            <tr>
                                <td><h3>Venda:&nbsp; </h3></td>
                                <td>
                                    <div id="osc_barrabotoes">

                                        <label>
                                            <button id="osc_novo" type="button" class="btn btn-info btn-sm fa fa-plus" value="" onclick="location.href='@Url.Action("BalcaoVendas", "BalcaoVendas" , null)'"> <span>Nova Venda</span></button>
                                        </label>
                                        <label>
                                            <button id="osc_fechar" type="button" class="btn btn-info btn-sm fa fa-close" value="" onclick="location.href='@Url.Action("GridBalcaoVendas", "BalcaoVendas" , null)'"> <span>Fechar</span></button>
                                        </label>

                                        <label>
                                            <button id="osc_imprimir" type="button" class="btn btn-info btn-sm fa fa-print" value="" onclick="Imprimir();"> <span>Emitir Cupom</span></button>
                                        </label>


                                    </div>
                                </td>
                                <td width="300px" align="center"></td>
                                <td>
                                    <input style="font-weight:bold; font-size:x-large" id="ValorTotalVendas" value="TOTAL:R$ 0,00" readonly="" class="form-control" />

                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">
                                <div class="form-inline" method="post">
                                    <div class="form-group mb-2">
                                        <label for="osc_titulo" style="font-weight:bold">Pesquisar Produto</label>
                                    </div>
                                    <div class="form-group mx-sm-3 mb-2">
                                        <input type="text" class="form-control" id="osc_pesquisaProduto" placeholder="Digite o nome Produto" name="osc_filtro" required="required" autocomplete="off" onkeypress="ConsultaProduto();">
                                        &nbsp;
                                    </div>
                                    <button type="button" class="btn btn-primary mb-2" onclick="ConsultaProduto();">PESQUISAR</button>
                                    <div class="form-group mx-sm-3 mb-2">
                                        <div class="form-group">
                                            <label class="control-label">Lista de Preço</label>&nbsp;
                                            <div class="inputGroupContainer">
                                                <div class="input-group">
                                                    <select asp-items="@Model.listaPrecos" asp-for="@Model.balcaoVendas.idListaPreco" id="osc_listaPreco" required="required"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mx-sm-3 mb-2">
                                        <input type="text" class="form-control" id="osc_CPF" placeholder="CPF" name="osc_cpf" autocomplete="off">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table id="produtosPequisa" class="table table-bordered table-hover table-striped table-sm table-responsive-sm ">
                                <thead>
                                    <tr>
                                        <th> </th>
                                        <th>Código</th>
                                        <th>Nome</th>
                                        <th>Fabricante</th>
                                        <th>Modelo</th>
                                        <th>QTD Disp</th>
                                        <th>Valor</th>
                                        <th> </th>
                                    </tr>
                                </thead>
                            </table>

                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">
                                <div class="form-inline" method="post">
                                    <div class="form-group mb-2">
                                        <label for="osc_titulo" style="font-weight:bold">Produtos da Venda</label>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table id="produtosVendas" class="table table-bordered table-hover table-striped table-sm table-responsive-sm" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Código</th>
                                        <th>Nome</th>
                                        <th>Quantidade</th>
                                        <th>Valor</th>
                                        <th>Total</th>
                                        <th>Ação</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                        </div>
                    </div>
                </div>  <br /><br />   <br /><br />   <br /><br />
                <div class="card-footer ">

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">

                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-2x fa-user"></span>
                                    </span> &nbsp;
                                    <input id="osc_criadoPor" asp-for="@Model.balcaoVendas.criadoPorName" type="text" class="form-control" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">

                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-asterisk fa-2x"></span>
                                    </span> &nbsp;
                                    <input id="osc_criadoEm" asp-for="@Model.balcaoVendas.statusBalcaoVendas" type="text" class="form-control" disabled="disabled"  />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </form>
    </div>
</div>


<div class="modal fade" id="ModalProdutoPedido">
</div>
<div class="modal fade" id="ModalStatusPedido">
</div>
<script src="~/lib/OscaJs/osc_global.js"></script>
<script src="~/lib/OscaJs/osc_balcaoVendas.js"></script>















