@model OscaApp.ViewModels.FornecedorViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)
    @Html.HiddenFor(m => m.fornecedor.id)
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <br /><br />
            <form action="FormUpdateFornecedor" method="post">
                <div class="card" id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title">
                            <table>
                                <tr>
                                    <td><h3>Fornecedor:&nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-lg fa fa-1x fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info  btn-lg fa fa-1x fa-close" value="Fechar" onclick="location.href='@Url.Action("PainelCadastro", "Paineis" , null)'"> <span>Fechar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info  btn-lg fa fa-1x fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreatefornecedor", "Fornecedor", null)'"> <span>Novo</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_inativa" type="button" class="btn btn-info btn-lg fa fa-ban fa-1x" value="Inativar"> <span>Inativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Ativar" type="button" class="btn btn-info btn-lg fa fa-check-circle-o fa-1x" value="Ativar"> <span>Ativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Deletar" type="button" class="btn btn-info btn-lg fa fa-times-circle-o fa-1x" value="Deletar"> <span>Deletar</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!--col1-->
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@Model.fornecedor.codigo">Código</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-asterisk fa-1x"></span>
                                    </span>
                                    <input id="osc_codigo" asp-for="@Model.fornecedor.codigo" type="text" class="form-control" disabled="disabled" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Nome do Fornecedor</label>
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user-o fa-1x"></i></span>
                                        <input id="osc_nomefornecedor" asp-for="@Model.fornecedor.nomeFornecedor" placeholder="Nome" class="form-control" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">CNPJ</label>
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user-o fa-1x"></i></span>
                                        <input id="osc_cpf" asp-for="@Model.fornecedor.cnpj" type="text" class="form-control" placeholder="CPF" onchange="ValidaCPF()" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--col2-->
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nome do Vendedor</label>
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user-o fa-1x"></i></span>
                                        <input id="osc_nomeVendedor" asp-for="@Model.fornecedor.nomeVendedor" placeholder="Nome" class="form-control" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.fornecedor.telefone">Telefone</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-phone fa-1x"></span>
                                    </span>
                                    <input id="osc_telefone" asp-for="@Model.fornecedor.telefone" type="text" class="form-control" placeholder="(XX) - 000000000" maxlength="15" pattern="[0-9]+$" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope-o fa-1x"></i></span>
                                        <input id="osc_email" asp-for="@Model.fornecedor.email" placeholder="Email" class="form-control" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--col3-->
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@Model.fornecedor.anotacao">Anotação</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-comment-o fa-1x"></span>
                                    </span>
                                    <textarea id="osc_anotacao" asp-for="@Model.fornecedor.anotacao" class="form-control" rows="9" cols="25" placeholder="digite uma anotação"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@Model.fornecedor.criadoPorName">Criado Por</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-user fa-1x"></span>
                                    </span>
                                    <input id="osc_criadoPor" asp-for="@Model.fornecedor.criadoPorName" type="text" class="form-control" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@Model.fornecedor.criadoEm">Criado Em</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-calendar fa-1x"></span>
                                    </span>
                                    <input id="osc_criadoEm" asp-for="@Model.fornecedor.criadoEm" type="text" class="form-control" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@Model.fornecedor.status">Status</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="fa fa-exclamation fa-1x"></span>
                                    </span>
                                    <input id="osc_status" asp-for="@Model.fornecedor.status" type="text" class="form-control" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <br /><br />
            <div class="card card-success" id="osc_fornecedores">
                <div class="card-header">
                    <div class="card-title">Fornecedores</div>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Fornecedor</th>
                                <th>Nome Vendedor</th>
                                <th>Telefone</th>
                            </tr>
                        </thead>
                        <tr><td>Fornecedor 1</td><td>Mauro</td><td>964515611</td></tr>
                        <tr><td>Fornecedor 1</td><td>Thiago</td><td>964515611</td></tr>
                        <tr><td>Fornecedor 1</td><td>Armando</td><td>964515611</td></tr>
                    </table>
                </div>
            </div>
            <div class="card card-success" id="osc_listaPreco">
                <div class="card-header">
                    <div class="card-title"> Lista de Preço</div>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tr><td>Atacado</td><td>10/12/2018</td></tr>
                        <tr><td>Varejo</td><td>10/12/2018</td></tr>
                        <tr><td>Promoção de Natal</td><td>10/12/2018</td></tr>
                    </table>
                </div>
            </div>
            <div class="card card-success" id="osc_itenlistaPreco">
                <div class="card-header">
                    <div class="card-title"> Itens Lista de Preço</div>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tr><td>Atacado</td><td>10/12/2018</td></tr>
                        <tr><td>Varejo</td><td>10/12/2018</td></tr>
                        <tr><td>Promoção de Natal</td><td>10/12/2018</td></tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

