@model OscaApp.ViewModels.PedidoViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)
    @Html.HiddenFor(m => m.cliente.id)
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-1">
            <form action="FormUpdatePedido" method="post" id="FormUpdatePedido">
                <div class="card " id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title">
                            <table>
                                <tr>
                                    <td><h3>Pedido:&nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-lg fa fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info btn-lg fa fa-remove" value="Fechar" onclick="location.href='@Url.Action("GridPedido", "Pedido" , null)'"> <span>Fechar</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <input id="osc_id" asp-for="pedido.id" type="hidden" class="form-control" value="@Model.pedido.id" />
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Código do Pedido</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-asterisk fa-1x"></span>
                                        </span>
                                        <input id="osc_codigo" for="" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Cliente*</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-o fa-1x"></span>
                                        </span>
                                        <input id="osc_clienteIdName" asp-for="@Model.cliente.idName" type="text" class="form-control" disabled="disabled" >
                                        <span class="input-group-btn ">
                                            <button type="button" class="btn btn-info">
                                                <span class="fa fa-search"></span>
                                            </button>
                                        </span>
                                        <input id="osc_clienteId" asp-for="@Model.cliente.id" type="hidden" class="form-control" />
                                    </div>
                                </div>
                             
                                <div class="form-group">
                                    <label class="control-label">Lista de Preço</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-asterisk fa-1x"></i></span>
                                            <select asp-items="@Model.listaPrecos" asp-for="@Model.pedido.idListaPreco" id="osc_listaPreco" disabled="disabled" ></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Tipo Pagamento</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-list-ul fa-1x"></span>
                                        </span>
                                        <select id="osc_tipoPagamento" asp-for="@Model.pedido.tipoPagamento" class="form-control" required="required">
                                            <option value="1" selected="">Dinheiro</option>
                                            <option value="2">Cartão</option>
                                            <option value="3">Cheque</option>
                                            <option value="4">Deposito</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Condição de Pagamento</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-list-ul fa-1x"></span>
                                        </span>
                                        <select id="osc_condicaoPagamento" asp-for="@Model.pedido.condicaoPagamento" class="form-control" required="required">
                                            <option value="1" selected="">Á Vista</option>
                                            <option value="2">Parcelado</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Método de Entrega</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-truck fa-1x"></span>
                                        </span>
                                        <select id="osc_metodoEntrega" asp-for="@Model.pedido.metodoEntrega" class="form-control" required="required" onchange="LimpaCNPJ_CPF()">
                                            <option value="1" selected="">Cliente Retira</option>
                                            <option value="2">Sedex</option>
                                            <option value="3">Transportadora</option>
                                            <option value="4">Depósito</option>
                                            <option value="5">Fedex</option>
                                            <option value="6">Correio</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Valor Frete</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-truck fa-1x"></span>
                                        </span>
                                        <input id="osc_valorFrete" asp-for="@Model.pedido.valorFrete" type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>                            
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Valor Total</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calculator fa-1x"></span>
                                        </span>
                                        <input id="osc_valorTotal" asp-for="@Model.pedido.valorTotal" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Anotação</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-comment-o fa-1x"></span>
                                        </span>
                                        <textarea id="osc_anotacao" asp-for="@Model.pedido.anotacao" class="form-control" rows="9" cols="4" placeholder="digite uma anotação"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="card card-success" id="osc_produtos">
                    <div class="card-header card-success">
                        <div class="card-title">
                            <table>
                                <tr>
                                    <td><h5>Produtos do Pedido:&nbsp;</h5></td>
                                    <td>
                                        <label>
                                            <button id="osc_produtoPedido" type="button" class="btn btn-success btn-lg fa fa-plus-square" value="Fechar" onclick="location.href='@Url.Action("GridCliente", "Cliente" , null)'"> <span>Incluir</span></button>
                                        </label>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Produto</th>
                                    <th>Tipo de Desconto</th>
                                    <th>QTD</th>
                                    <th> Desconto </th>
                                    <th> Desconto % </th>
                                  
                                    <th>Valor</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tr>
                                <td><i class="fa fa-1x fa-shopping-basket"></td>
                                <td>Procesador intel</td>
                                <td> Valor </td>
                                <td> 9 </td>
                                <td> R$ 5,00</td>
                                <td> 10,00 </td>
                                <td>R$ 800,50 </td>
                                <td>
                                    <label>
                                        <button id="osc_produtoPedidoEdit" type="button" class="btn btn-info btn-lg fa fa-1x fa-trash" value="Detalhes" onclick="location.href='@Url.Action("GridCliente", "Cliente" , null)'"> <span>Editar</span></button>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <button id="osc_produtoPedidoDelete" type="button" class="btn btn-info btn-lg fa fa-1x fa-trash" value="Fechar" onclick="location.href='@Url.Action("GridCliente", "Cliente" , null)'"> <span>Remover</span></button>
                                    </label>
                                </td>
                            </tr>
                            <tr>
                                <td><i class="fa fa-1x fa-shopping-basket"></td>
                                <td>Procesador intel</td>
                                <td> Valor </td>
                                <td> 9 </td>
                                <td> R$ 5,00</td>
                                <td> 10,00 </td>
                                <td>R$ 800,50 </td>
                                <td>
                                    <label>
                                        <button id="osc_produtoPedidoEdit" type="button" class="btn btn-info btn-lg fa fa-1x fa-trash" value="Detalhes" onclick="location.href='@Url.Action("GridCliente", "Cliente" , null)'"> <span>Editar</span></button>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <button id="osc_produtoPedidoDelete" type="button" class="btn btn-info btn-lg fa fa-1x fa-trash" value="Fechar" onclick="location.href='@Url.Action("GridCliente", "Cliente" , null)'"> <span>Remover</span></button>
                                    </label>
                                </td>
                            </tr>                                            
                        </table>
                    </div>
                </div>
            </form><br />
            <br />
       <br />   <br />   
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Criado Por</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-user"></span>
                                </span>
                                <input id="osc_criadoPor" asp-for="@Model.pedido.criadoPorName" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Criado Em</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar fa-1x"></span>
                                </span>
                                <input id="osc_criadoEm" asp-for="@Model.pedido.criadoEm" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Modificado Por</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-user"></span>
                                </span>
                                <input id="osc_modificadoPor" asp-for="@Model.pedido.modificadoPorName" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Modificado Em</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar fa-1x"></span>
                                </span>
                                <input id="osc_modificadoEm" asp-for="@Model.pedido.modificadoEm" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Status</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-exclamation fa-1x"></span>
                                </span>
                                <input id="osc_status" asp-for="@Model.pedido.status" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
        </div>
    </div>
</div> 


 

