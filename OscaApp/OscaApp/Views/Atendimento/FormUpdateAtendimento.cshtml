                    <div class="card-header">
                        <div class="card-title ">
                            <table>
                                <tr>
                                    <td><h3>Atendimento: &nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-sm fa fa-floppy-o" value=""> <span>Salvar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info btn-sm fa fa-plus" value="" onclick="location.href='@Url.Action("FormCreateAtendimento", "Atendimento" , null)'"> <span>Novo</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info btn-sm fa fa-remove" value="" onclick="location.href='@Url.Action("GridAtendimento", "Atendimento" , null)'"> <span>Fechar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_reabrir" type="button" class="btn btn-info btn-sm fa fa-close" value="" onclick="CarregaFormStatus()"> <span>Reabrir</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_imprimir" type="button" class="btn btn-info btn-sm fa fa-paste" onclick="Imprimir();"> <span>Ficha</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_excluir" type="button" class="btn btn-info btn-sm fa fa-remove" value=""> <span>Excluir</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_calendario" type="button" class="btn btn-info btn-sm fa fa-calendar" value="" onclick="location.href='@Url.Action("Mes", "Calendario", null)'"> <span>Ver Calendário</span></button>
                                            </label>
                                            <span class="input-group-addon m-2" style="font-weight:bold;font-size:20px"> Valor:</span>
                                            <input id="osc_valor" asp-for="@Model.atendimento.valor" class=" " type="text">
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
