@model X.PagedList.PagedList<OscaApp.ViewModels.GridViewModels.AtendimentoGridViewModel>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@using OscaFramework.Helper;
<div class="container-fluid">
    <div class="row">
        <div class="col-md-11 offset-1">
            <div class="card" id="osc_Grid">
                <div class="card-header">
                    <div class="card-title">
                        <form class="form-inline">
                            <table>
                                <tr>
                                    <td>
                                        <h5 style="font-weight:bold">Lista de Atendimentos: &nbsp;&nbsp;</h5>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info btn-lg fa fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateAtendimento", "Atendimento", null)'"> <span>Novo</span></button>
                                            </label>
                                            &nbsp;&nbsp;
                                            <span>
                                                @Html.TextBox("filtro", "", new { @class = "form-control ", @style = "max-width:none;", placeholder = "Pesquisar", id = "grid" })
                                            </span>
                                            <button type="submit" class="btn btn-info fa fa-search"></button>
                                            &nbsp;&nbsp;
                                            <label>
                                                <button id="osc_recarregar" type="submit" class="btn btn-info btn-lg fa fa-remove" value="Limpar" onclick="RecarregarGrid()"> <span>Limpar</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
                    <div class="card-body">
                        <div class="row">
                            
                                <table class="table table-hover table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Código</th>
                                            <th>Título</th>
                                            <th>Cliente</th>                                            
                                            <th>Data Agendada</th>
                                            <th>Hora Início</th>
                                            <th>Hora Fim</th>
                                            <th>Valor</th>
                                            <th>Associado a</th>
                                            <th>Status do Atendimento</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="@item.atendimento.id" onclick="location.href='@Url.Action("FormUpdateAtendimento", "Atendimento", new {id = item.atendimento.id })'">
                                            <td><i class="fa fa-calendar-times-o"></i></td>
                                            <td>@Html.ActionLink(item.atendimento.codigo.ToString(), "FormUpdateAtendimento", new { id = item.atendimento.id })</td>
                                            <td>@item.atendimento.titulo</td>
                                            <td>@item.cliente.nomeCliente</td>
                                            
                                            <td>@item.atendimento.dataAgendada.ToShortDateString()</td>
                                            <td>@HelperCalendario.RetornaHoraFormatda(Convert.ToInt32(item.horaInicio.horaDia))</td>
                                            <td>@HelperCalendario.RetornaHoraFormatda(Convert.ToInt32(item.horaFim.horaDia))</td>
                                            <td>R$@item.atendimento.valor.ToString("N2")</td>
                                            <td>@item.atendimento.tipoReferencia</td>
                                            <td>@item.atendimento.statusAtendimento</td>
                                        </tr>
                                    }
                                </table>
                                <div>
                                    <table>
                                        <tr>
                                            <td style="width:75%">@Html.PagedListPager((IPagedList)Model, page => Url.Action("GridAtendimento", "Atendimento", new { page }))</td>
                                            <td><h5>Registros de @Model.FirstItemOnPage até  @Model.LastItemOnPage - Total:@Model.TotalItemCount</h5></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    <br /><br /><br /><br /> <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <div class="row" style="position:sticky;bottom:40px; padding:10px 0 0 0; background:#fff;    ">
        <div style="background-color:darkgrey; width: 100%; height:10px;"></div>

        <div class="col-md-3">
            <div class="card m-2">
                <table>
                    <tr>
                        <td><span class="fa fa-2x fa-cog iconPanel"></span></td>
                        <td><a asp-controller="Paineis" asp-action="PainelOperacional"><h6>Operacional</h6></a></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-2">
                <table>
                    <tr>
                        <td><span class="fa fa-2x fa-money iconPanel"></span></td>
                        <td><a asp-controller="Paineis" asp-action="PainelFinanceiro"><h6>Financeiro</h6></a></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-2">
                <table>
                    <tr>
                        <td><span class="fa fa-2x fa-handshake-o iconPanel"></span></td>
                        <td><a asp-controller="Paineis" asp-action="PainelVendas"><h6>Vendas</h6></a></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-2">
                <table>
                    <tr>
                        <td><span class="fa fa-2x fa-wrench iconPanel"></span></td>
                        <td><a asp-controller="Paineis" asp-action="PainelServico"><h6>Serviços</h6></a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
