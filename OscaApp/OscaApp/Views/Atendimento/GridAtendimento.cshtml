@model X.PagedList.PagedList<OscaApp.ViewModels.GridViewModels.AtendimentoGridViewModel>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@using OscaFramework.Helper;
 
    <div class="row">
        <div class="col-md-11  offset-1">
            <div class="card" id="osc_Grid">
                <div class="card-header">
                    <div class="card-title">
                     
                        <form class="form-inline">
                            <table>
                                <tr>
                                    <td>
                                        <h5 style="font-weight:bold">Atendimentos: &nbsp;</h5>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <div class="form-group">
                                                <label>Filtros</label>
                                                <div class="input-group">
                                                    &nbsp;<div class="col-2">
                                                              <select id="osc_filtro" class="form-control custom-select-sm" required="required" onchange="OnChangeFiltro();">
                                                                  <option value="0" selected="">Meus Atendimento Abertos</option>
                                                                  <option value="1">Meus Atendimentos Fechados</option>
                                                                  <option value="2">Todos Atendimentos Fechados</option>
                                                                  <option value="3">Todos Atendimentos Abertos</option>
                                                                  <option value="4">Todos Atendimentos</option>

                                                              </select>
                                                    </div>
                                                </div>
                                            </div>&nbsp;
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info btn-lg fa fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateAtendimento", "Atendimento", null)'"> <span>Novo</span></button>
                                            </label>
                                            &nbsp;&nbsp;
                                            <span>
                                                @Html.TextBox("filtro", "", new { @class = "form-control ", @style = "max-width:none;", placeholder = "Pesquisar", id = "grid" })
                                            </span>
                                            <button type="submit" class="btn btn-info fa fa-search"></button>
                                            &nbsp;&nbsp;
                                            <label>
                                                <button id="osc_recarregar" type="submit" class="btn btn-info btn-lg fa fa-remove" value="Limpar" onclick="RecarregarGrid()"> <span>Limpar</span></button>
                                            </label>&nbsp;&nbsp;
                                            <label>
                                                <button id="osc_calendario" type="button" class="btn btn-info btn-lg fa fa-calendar" onclick="location.href='@Url.Action("Mes", "Calendario", null)'"> <span>Calendário</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <table class="table table-hover   table-bordered table-sm">
                            <thead class="thead-light">
                                <tr>
                                    <th></th>
                                    <th>Código</th>
                                    <th>Título</th>
                                    <th>Cliente</th>
                                    <th>Data Agendada</th>
                                    <th>Hora Início</th>
                                    <th>Hora Fim</th>
                                    <th>Valor</th>
                                     
                                    <th>Status Aten </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr style="cursor:pointer;" id="@item.atendimento.id" onclick="location.href='@Url.Action("FormUpdateAtendimento", "Atendimento", new {id = item.atendimento.id })'">
                                    <td><i class="fa fa-calendar-times-o"></i></td>
                                    <td>@Html.ActionLink(item.atendimento.codigo.ToString(), "FormUpdateAtendimento", new { id = item.atendimento.id })</td>
                                    <td>@item.atendimento.titulo</td>
                                    <td>@item.cliente.nomeCliente</td>

                                    <td>@item.atendimento.dataAgendada.ToShortDateString()</td>
                                    <td>@HelperCalendario.RetornaHoraFormatda(Convert.ToInt32(item.horaInicio.horaDia))</td>
                                    <td>@HelperCalendario.RetornaHoraFormatda(Convert.ToInt32(item.horaFim.horaDia))</td>
                                    <td>R$@item.atendimento.valor.ToString("N2")</td>
                                   
                                    <td>@item.atendimento.statusAtendimento</td>
                                </tr>
                            }
                        </table>

                    </div>
                </div>
                <div class="card-footer">
                    <table>
                        <tr>
                            <td style="width:75%">@Html.PagedListPager((IPagedList)Model, page => Url.Action("GridAtendimento", "Atendimento", new { page }))</td>
                            <td><h5>Registros de @Model.FirstItemOnPage até  @Model.LastItemOnPage - Total:@Model.TotalItemCount</h5></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<br /><br /><br /><br /> <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
<div class="col-md-10 offset-1" style="position:sticky;bottom:20px; padding:10px 0 0 0; background:#fff;">
    <div class="row">
        <div style="background-color:darkgrey; width:100%; height:10px;"></div>

        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-cog iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelOperacional"><h6>Operacional</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-money iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelFinanceiro"><h6>Financeiro</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-handshake-o iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelVendas"><h6>Vendas</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-1">
                <div class="card-body">
                    <table>
                        <tr>
                            <td><span class="fa fa-2x fa-wrench iconPanel"></span></td>
                            <td><a asp-controller="Paineis" asp-action="PainelServico"><h6>Serviços</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    var url = window.location.search.replace("?", "");
    var items = url.split("&");

    var array = {
        'valor': items[0]
    }

    if (array.valor == "view=0") { $("#osc_filtro").val("0"); }
    if (array.valor == "view=1") { $("#osc_filtro").val("1"); }
    if (array.valor == "view=2") { $("#osc_filtro").val("2"); }
    if (array.valor == "view=3") { $("#osc_filtro").val("3"); }
    if (array.valor == "view=4") { $("#osc_filtro").val("4"); }


    function OnChangeFiltro() {

        var filtro = $("#osc_filtro").val();

        if (filtro == "0") { $(window.document.location).attr('href', "GridAtendimento?view=0"); }
        if (filtro == "1") { $(window.document.location).attr('href', "GridAtendimento?view=1"); }
        if (filtro == "2") { $(window.document.location).attr('href', "GridAtendimento?view=2"); }
        if (filtro == "3") { $(window.document.location).attr('href', "GridAtendimento?view=3"); }
        if (filtro == "4") { $(window.document.location).attr('href', "GridAtendimento?view=4"); }

    }

</script>
