@model OscaApp.ViewModels.PainelOperacionalViewModel

@{
    ViewData["Title"] = "Painel Operacional";
}
<div id="context">
    @Html.HiddenFor(m => m.contextPage.idUsuario)
    @Html.HiddenFor(m => m.contextPage.idOrganizacao)
    @Html.HiddenFor(m => m.contextPage.nomeUsuario)
    @Html.HiddenFor(m => m.contextPage.organizacao)
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 ">
            <table>
                <tr>
                    <td><h1> Painel Operacional</h1></td>               
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <div class="card m-2">
                        <div class="card-header">
                            <i class="fa fa-2x fa-user-circle  iconPanel" aria-hidden="true"></i>
                            <a asp-controller="Cliente" asp-action="GridCliente"><h4>Cliente</h4></a>
                        </div>
                        <div class="card-body">
                            <p> Cadastre, consulte e edite clientes</p>
                        </div>
                    </div>
                    <div class="card m-2">
                        <div class="card-header">
                            <i class="fa fa-2x fa-address-book iconPanel" aria-hidden="true"></i>
