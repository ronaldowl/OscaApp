@model OscaApp.Data.ContextPage
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3><i class="fa fa-smile-o fa-1x"></i> @Model.nomeUsuario seja bem vindo ao OSCA!</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 offset-9">
            <iframe allowtransparency="true" scrolling="no" src="http://www.tempoagora.com.br/ta-widgets?cidades=SaoPaulo-SP&amp;tipo=vertical" width="160" height="260" frameborder="0"></iframe>
            <script type="text/javascript" src="//100widgets.com/js_data.php?id=118"></script>
            <div class="card m-4">
                <div class="card-body">
                    <i class="fa fa-2x fa-cloud-download iconPanel" aria-hidden="true"></i>
                    <a asp-controller="Suporte" asp-action="TesteVelocidade"><p style="font-size:19px; margin:0;">Teste de Velocidade</p></a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div style="background-color:darkgrey; width: 100%; height:20px; margin-top:2vh;"></div>
        <div class="col-md-3">
            <div class="card m-2">
                <div class="card-body">
                    <i class="fa fa-2x fa-cog iconPanel" aria-hidden="true"></i>
                    <a asp-controller="Paineis" asp-action="PainelOperacional"><p style="font-size:19.8px; margin:0;">Operacional</p></a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-2">
                <div class="card-body">
                    <i class="fa fa-2x fa-money iconPanel" aria-hidden="true"></i>
                    <a asp-controller="Paineis" asp-action="PainelFinanceiro"><h5>Financeiro</h5></a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-2">
                <div class="card-body">
                    <i class="fa fa-2x fa-life-ring iconPanel" aria-hidden="true"></i>
                    <a asp-controller="Paineis" asp-action="PainelVendas"><h5>Vendas</h5></a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card m-2">
                <div class="card-body">
                    <i class="fa fa-2x fa-life-ring iconPanel" aria-hidden="true"></i>
                    <a asp-controller="Paineis" asp-action="PainelServico"><h5>Serviços</h5></a>
                </div>
            </div>
        </div>
    </div>
</div>