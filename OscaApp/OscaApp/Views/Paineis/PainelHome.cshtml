@model OscaApp.Data.ContextPage
<div class="row">
    <h3>Painel Home</h3>
</div>
<div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-warning">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-cogs iconPanel" aria-hidden="true"></i></td>
                            <td><a asp-controller="Paineis" asp-action="PainelOperacional"><h6>Operacional</h6></a></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="card">
                <div class="card-header bg-info">
                    <table>
                        <tr>
                            <td><i class="fa fa-2x fa-home iconPanel" aria-hidden="true"></i></td>
                            <td><h5>Institucional</h5></td>
                        </tr>
                    </table>
                </div>
                <div class="card-body">
                    <ol style="font-size:12px;font-weight:bold;list-style-type:circle;padding:5px;">
                        <li><a href="www.oscas.com.br">www.oscas.com.br</a></li>
                        <li><a href="www.loja.oscas.com.br">www.loja.oscas.com.br </a></li>
                        <li><a href="www.intranet.oscas.com.br">www.intranet.oscas.com.br </a></li>
                        <li>suporte@oscas.com.br</li>
                        <li>WhatsApp (11) 9-8872-2348</li>
                    </ol>

                </div>
            </div>
            <div id="volumetria">

            </div>
        </div>
        <div class="col-md-8" id="comunicados">
        </div>   
</div>
<br />
<div class="row"> 
    <div class="col-md-4" id="tarefas">
    </div>
    <div class="col-md-4" id="agendamentos">
    </div>
    <div class="col-md-4" id="contasReceber">
    </div>
</div>

<br /><br /><br />

<div class="row" style="position:sticky;bottom:35px; padding:10px 0 0 0; background:#fff;">
    <div style="background-color:darkgrey; width: 100%; height:10px;"></div>
    <div class="col-sm-3">
        <div class="card m-1">
            <div class="card-body">
                <table>
                    <tr>
                        <td><i class="fa fa-2x fa-money iconPanel" aria-hidden="true"></i></td>
                        <td><a asp-controller="Paineis" asp-action="PainelFinanceiro"><h4>Financeiro</h4></a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card m-1">
            <div class="card-body">
                <table>
                    <tr>
                        <td>
                            <i class="fa fa-2x fa-handshake-o iconPanel" aria-hidden="true"></i>
                        </td>
                        <td>
                            <a asp-controller="Paineis" asp-action="PainelVendas"><h4>Vendas</h4></a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card m-1">
            <div class="card-body">
                <table>
                    <tr>
                        <td><i class="fa fa-2x fa-wrench iconPanel" aria-hidden="true"></i></td>
                        <td><a asp-controller="Paineis" asp-action="PainelServico"><h4>Serviços</h4></a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card m-1">
            <div class="card-body">
                <table>
                    <tr>
                        <td><i class="fa fa-2x fa-cog iconPanel" aria-hidden="true"></i></td>
                        <td><a asp-controller="Paineis" asp-action="PainelConfiguracoes"><h4>Configurações</h4></a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    CarregaComunicados();
    CarregaTarefas();
    CarregaAgendamentos();
    CarregaContasReceber();
    CarregaVolumetria();
    function CarregaComunicados() {
        $.ajax("/Comunicado/QuadroComunicadoResumido").done(function (data) {
            $("#comunicados").html(data);
        });
    }
    function CarregaTarefas() {
        $.ajax("/Atividade/GridAtividadeDia").done(function (data) {
            $("#tarefas").html(data);
        });
    }
    function CarregaAgendamentos() {
        $.ajax("/agendamento/GridAgendamentoDia").done(function (data) {
            $("#agendamentos").html(data);
        });
    }
    function CarregaContasReceber() {
        $.ajax("/contasReceber/GridContasReceberDia").done(function (data) {
            $("#contasReceber").html(data);
        });
    }
    function CarregaVolumetria() {
        $.ajax("/Volumetria/VolumetriaResumo").done(function (data) {
            $("#volumetria").html(data);
        });
    }
</script>
