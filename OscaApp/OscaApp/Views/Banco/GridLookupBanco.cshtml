@model X.PagedList.PagedList<OscaFramework.Models.Banco>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@{
    Layout = "_LayoutFrame";
}

<div class="row">
    <div class="col-md-11">
        <table class="table table-hover  table-bordered table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Site</th>
                </tr>
            </thead>
            @foreach (var item in Model)
                                    {
                <tr id="@item.id" onclick="ConfigLookup('@item.id.ToString()','@item.nome.ToString()'" data-dismiss="modal">
                    <td><i class="fa fa-1x fa-university"></i></td>
                    <td>@item.codigo</td>
                    <td>@item.nome</td>
                    <td>@item.site</td>
                </tr>
                                    }
        </table>
        <div>
            <table>
                <tr>
                    <td style="width:75%">@Html.PagedListPager((IPagedList)Model, page => Url.Action("GridBanco", "Banco", new { page }))</td>
                    <td><h5>Registros de @Model.FirstItemOnPage até  @Model.LastItemOnPage - Total:@Model.TotalItemCount</h5></td>
                </tr>
            </table>
        </div>
    </div>
</div>
