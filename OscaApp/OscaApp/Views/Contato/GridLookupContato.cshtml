@model X.PagedList.PagedList<OscaFramework.Models.Contato>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@{
    Layout = "_LayoutFrame";
}


<div class="row">
    <div class="col-md-11">
        <table class="table table-hover table-striped table-sm">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                </tr>
            </thead>
            @foreach (var item in Model)
                                    {
                <tr id="@item.id" value="@item.nome" onclick="ConfigLookup('@item.id.ToString()','@item.nome.ToString()')">
                    <td>@item.nome</td>
                    <td>@item.email</td>
                    <td>@item.telefone</td>
                </tr>
                                    }
        </table>
        <div>
            <table>
                <tr>
                    <td style="width:75%">@Html.PagedListPager((IPagedList)Model, page => Url.Action("LookupContato", "Contato", new { page }))</td>
                    <td><h5>Registros de @Model.FirstItemOnPage até  @Model.LastItemOnPage - Total:@Model.TotalItemCount</h5></td>
                </tr>
            </table>
        </div>
    </div>
</div>
