@model X.PagedList.PagedList<OscaFramework.Models.Comunicado>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@{
    Layout = "_LayoutFrame";
}
 
            <div class="card" id="osc_Grid">
                <div class="card-header">
                    <div class="card-title">
                        <center><h5 style="font-weight:bold"> Quadro de Avisos </h5></center>
                    </div>
                </div>
                <div class="card-body">                    
                        <div  >
                            <table class="table table-hover   table-bordered">

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="font-size:12px"><center><label style="font-weight:bold">@item.mensagem</label></center> 
                                             
                                        </td>
                                    </tr>
                                }
                            </table>
                         
                        </div>
                     
                </div>
            </div>
  
 
 
