@model OscaApp.ViewModels.ItemListaPrecoViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-1">
            @if (!String.IsNullOrEmpty(Model.StatusMessage))
            {

                <div class="alertPers alert alert-success alert-dismissible alert-dismissiblePers" role="alert">
                    <button type="button" class="closePers close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.StatusMessage
                </div>
            }
            <form action="FormUpdateItemListaPreco" method="post" id="FormUpdateItemListaPreco">
                <input asp-for="@Model.itemlistaPreco.id" class="form-control" type="hidden" value="@Model.itemlistaPreco.id">
                <div class="card" id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title ">
                            <table>
                                <tr>
                                    <td><h3>Item da Lista de Preço: &nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-sm fa fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info btn-sm fa fa-remove" value="Fechar" onclick="location.href='@Url.Action("FormUpdateProduto", "Produto" , new {id  = @Model.itemlistaPreco.idProduto})'"> <span>Fechar</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" style="color:red">Produto*</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-list fa-1x"></i></span>
                                            <input asp-for="@Model.produto.idName" class="form-control" type="text" disabled="disabled">
                                            <input asp-for="@Model.itemlistaPreco.idProduto" class="form-control" type="hidden" value="@Model.produto.id">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Lista de Preço</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-asterisk fa-1x"></i></span>
                                            <select asp-items="@Model.listaPrecos" asp-for="@Model.itemlistaPreco.idListaPreco"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Valor de Venda</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-money fa-1x"></i></span>
                                            <input asp-for="@Model.itemlistaPreco.valor" class="form-control" type="text">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Criado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoPor" asp-for="@Model.itemlistaPreco.criadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Criado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoEm" asp-for="@Model.itemlistaPreco.criadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Modificado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoPor" asp-for="@Model.itemlistaPreco.modificadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Modificado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoEm" asp-for="@Model.itemlistaPreco.modificadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
