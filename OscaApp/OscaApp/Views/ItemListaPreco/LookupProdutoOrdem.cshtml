@model X.PagedList.PagedList<OscaFramework.Models.LookupItemLista>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@

@{
    Layout = "_LayoutFrame";
}


<script type="text/javascript">
 
    function ConfigLookup(id, name, valor) {
    
        $("#osc_valor").val(valor);
        $("#osc_IdNameProduto").val(name);
        $("#osc_IdProduto").val(id);              
            
        $('#lookupProduto').on('hidden', function () { $(this).empty(); });
    }
    function CarregaGrid() {

        $.ajax("/itemListaPreco/GridLookupProdutoOrdem?idListaPreco=" + idListaPreco).done(function (data) {
            $("#GridProdutoOrdem").html(data);
        });
    }
    function CarregaGridFiltro() {

        var filtro = $("#grid").val();

        $.ajax("/itemListaPreco/GridLookupProdutoOrdem?filtro=" + filtro + "&idListaPreco=" + idListaPreco).done(function (data) {
            $("#GridProdutoOrdem").html(data);
        });

    }
</script>

<div class="modal-dialog modal-lg">
    <div class="modal-content">    
        <div class="modal-body">            
                        <table>
                            <tr>
                                <td>
                                    <h5 style="font-weight:bold">Lista de Produtos: &nbsp;&nbsp;</h5>
                                </td>
                                <td>
                                    <form class="form-inline">                                   

                                        <div class="form-group  col-md-4">
                                            <div class="input-group">
                                                @Html.TextBox("filtro", "", new { @class = "form-control ", @style = "max-width:none;", placeholder = "Pesquisar", id = "grid", onkeydown = " CarregaGridFiltro();" })
                                                <span class="input-group-btn ">
                                                    <button type="button" class="btn  btn-info" onclick="CarregaGridFiltro();">
                                                        <span class="fa fa-search"></span>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                        <label>
                                            <button id="osc_recarregar" type="button" class="btn btn-info btn-lg  fa fa-remove" value="Limpar" onclick="CarregaGrid()"> <span>Limpar</span></button>

                                        </label>   
                                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                               
                                        <label>
                                            <button type="button" class="close btn btn-info btn-lg" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Fechar</span></button>
                                        </label>
                                    </form>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-body">
                  <div id="GridProdutoOrdem">

                  </div>
                    </div>
                </div>
            </div>
 
<script>
    CarregaGrid();
</script>