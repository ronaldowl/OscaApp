@model OscaApp.ViewModels.ClienteViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)
    @Html.HiddenFor(m => m.cliente.id)
</div>
<script>
    function CarregaLookup() {
        $("#lookupContato").load("/Contato/LookupContato", function () {
            $("#lookupContato").modal("show");
        })
    }
</script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <form action="FormUpdateCliente" method="post" id="osc_MainFormUpdate">
                <div class="card  " id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title">
                            <table>
                                <tr>
                                    <td><h3>Cliente:&nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-lg fa fa-1x fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>

                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info  btn-lg fa fa-1x fa-close" value="Fechar" onclick="location.href='@Url.Action("GridCliente", "Cliente" , null)'"> <span>Fechar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info  btn-lg fa fa-1x fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateCliente", "Cliente", null)'"> <span>Novo</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_inativa" type="button" class="btn btn-info btn-lg fa fa-ban fa-1x" value="Inativar"> <span>Inativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Ativar" type="button" class="btn btn-info btn-lg fa fa-check-circle-o fa-1x" value="Ativar"> <span>Ativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Deletar" type="button" class="btn btn-info btn-lg fa fa-times-circle-o fa-1x" value="Deletar"> <span>Excluir</span></button>
                                            </label>

                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <input id="osc_id" asp-for="cliente.id" type="hidden" class="form-control" value="@Model.cliente.id" />
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Código</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-asterisk fa-2x"></span>
                                        </span>&nbsp;
                                        <input id="osc_codigo" asp-for="@Model.cliente.codigo" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Nome Cliente</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-o fa-2x"></span>
                                        </span>&nbsp;
                                        <input id="osc_nome" asp-for="@Model.cliente.nomeCliente" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Tipo Pessoa</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-list-ul fa-2x"></span>
                                        </span> &nbsp;
                                        <select id="osc_tipopessoa" asp-for="@Model.cliente.tipoPessoa" class="form-control" required="required" onchange="LimpaCNPJ_CPF()">
                                            <option value="1">Fisica</option>
                                            <option value="2">Juridica</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>CPF/CNPJ</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-o fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_cnpj_cpf" asp-for="@Model.cliente.cnpj_cpf" type="text" class="form-control" placeholder="CPF ou CNPJ" onchange="ValidaCNPJ_CPF()" />
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Razão Social</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-briefcase fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_razaosocial" asp-for="@Model.cliente.razaoSocial" type="text" class="form-control" placeholder="Razão Social" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Contato Principal: </label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-o fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_IdContatoName" asp-for="@Model.contato.idName" type="text" class="form-control">
                                        <span class="input-group-btn ">
                                            <button type="button" class="btn btn-info" onclick="CarregaLookup()">
                                                <span class="fa fa-search"></span>
                                            </button>
                                        </span>
                                        <input id="osc_ContatoId" asp-for="@Model.contato.id" type="hidden" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Sexo</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-list-ul fa-2x"></span>
                                        </span> &nbsp;
                                        <select id="osc_sexo" asp-for="@Model.cliente.sexo" class="form-control">
                                            <option value="1" selected="">Masculino</option>
                                            <option value="2">Feminino</option>
                                            <option value="3">Outros</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Telefone</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-phone fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_telefone" asp-for="@Model.cliente.telefone" type="text" class="form-control" maxlength="15" pattern="[0-9]+$" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Celular</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-mobile-phone fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_celular" asp-for="@Model.cliente.celular" type="text" class="form-control" maxlength="15" pattern="[0-9]+$" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Email</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-envelope-o fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_email" asp-for="@Model.cliente.email" type="email" class="form-control" placeholder="Email" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Anotação</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-comment-o fa-2x"></span>
                                        </span> &nbsp;
                                        <textarea id="osc_anotacao" asp-for="@Model.cliente.anotacao" class="form-control" rows="9" cols="25" placeholder="digite uma anotação"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- FOOTER -->
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Criado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoPor" asp-for="@Model.cliente.criadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">Criado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoEm" asp-for="@Model.cliente.criadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Modificado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoPor" asp-for="@Model.cliente.modificadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">Modificado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoEm" asp-for="@Model.cliente.modificadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">Status</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-exclamation fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_status" asp-for="@Model.cliente.status" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- FOOTER -->
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card card-success" id="osc_formEndereco">
                <div class="card-header card-success">
                    <div class="card-title">
                        <table>
                            <tr>
                                <td style="width:150px"><h5>Endereços:&nbsp;</h5></td>
                                <td>
                                    <div id="barra_acoes_endereco">
                                        <label>
                                            <button id="osc_verEndereco" data-toggle="collapse" data-target="#conteudoEndereco" class="btn btn-info btn-sm fa fa-1x fa-plus"> <span>Exp</span></button>
                                        </label>&nbsp;
                                        <label>
                                            <button id="osc_endereco" type="button" class="btn btn-info btn-sm fa fa-1x fa-plus" value="Novo Endereço" onclick="location.href='@Url.Action("FormCreateEndereco", "Endereco", new { idCliente = @Model.cliente.id, NomeCliente = @Model.cliente.nomeCliente })'"> <span>Novo</span></button>
                                        </label>
                                        <label>
                                            <button id="osc_gridEndereco" type="button" class="btn btn-info btn-sm fa fa-1x fa-search-plus" value="Ver mais" onclick="location.href='@Url.Action("GridEndereco", "Endereco", new {idCliente = @Model.cliente.id })'">Ver mais</button> Total:@Model.enderecos.Count
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="card-body collapse" id="conteudoEndereco">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Logradouro</th>
                                <th>Número</th>
                                <th>Cep</th>

                                <th>Tipo</th>
                            </tr>
                        </thead>
                        @{int contador = 0;}
                        @foreach (var item in Model.enderecos)
                        {
                            @if (contador == 5) { break; }
                            <tr>
                                <td>@Html.ActionLink(item.logradouro.ToString(), "FormUpdateEndereco", "Endereco", new { id = item.id })</td>
                                <td>@item.numero</td>
                                <td>@item.cep</td>
                                <td>@item.TipoEndereco</td>
                            </tr>
                            contador++;
                        }
                    </table>
                </div>
            </div>
            <div class="card card-success" id="osc_formOrdemServico">
                <div class="card-header card-success">
                    <div class="card-title">
                        <table>
                            <tr>
                                <td style="width:150px"><h5>Ordens Servico:&nbsp;</h5></td>
                                <td>
                                    <div id="barra_acoes_ordemSevico">
                                        <label>
