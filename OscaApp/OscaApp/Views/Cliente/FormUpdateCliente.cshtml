@model OscaApp.ViewModels.ClienteViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.contexto.idOrganizacao)
    @Html.HiddenFor(m => m.contexto.organizacao)
    @Html.HiddenFor(m => m.contexto.idUsuario)
    @Html.HiddenFor(m => m.contexto.nomeUsuario)
    @Html.HiddenFor(m => m.cliente.id)
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
        
            <form action="FormUpdateCliente" method="post">
                <div class="card  " id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title">
                            <table>
                                <tr>
                                    <td><h3>Cliente:&nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-lg fa fa-1x fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info  btn-lg fa fa-1x fa-close" value="Fechar" onclick="location.href='@Url.Action("GridCliente", "Cliente" , null)'"> <span>Fechar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info  btn-lg fa fa-1x fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateCliente", "Cliente", null)'"> <span>Novo</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_inativa" type="button" class="btn btn-info btn-lg fa fa-ban fa-1x" value="Inativar"> <span>Inativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Ativar" type="button" class="btn btn-info btn-lg fa fa-check-circle-o fa-1x" value="Ativar"> <span>Ativar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_status_Deletar" type="button" class="btn btn-info btn-lg fa fa-times-circle-o fa-1x" value="Deletar"> <span>Deletar</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <input id="osc_id" asp-for="cliente.id" type="hidden" class="form-control" value="@Model.cliente.id" />

                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.codigo">Código</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-asterisk fa-1x"></span>
                                        </span>
                                        <input id="osc_codigo" asp-for="@Model.cliente.codigo" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.nomeCliente">Nome Cliente</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-o fa-1x"></span>
                                        </span>
                                        <input id="osc_nome" asp-for="@Model.cliente.nomeCliente" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.tipoPessoa">Tipo Pessoa</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-list-ul fa-1x"></span>
                                        </span>
                                        <select id="osc_tipopessoa" asp-for="@Model.cliente.tipoPessoa" class="form-control" required="required" onchange="LimpaCNPJ_CPF()">
                                            <option value="1">Fisica</option>
                                            <option value="2">Juridica</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.cnpj_cpf">CPF/CNPJ</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-o fa-1x"></span>
                                        </span>
                                        <input id="osc_cnpj_cpf" asp-for="@Model.cliente.cnpj_cpf" type="text" class="form-control" placeholder="CPF ou CNPJ" onchange="ValidaCNPJ_CPF()" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.razaoSocial">Razão Social</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-briefcase fa-1x"></span>
                                        </span>
                                        <input id="osc_razaosocial" asp-for="@Model.cliente.razaoSocial" type="text" class="form-control" placeholder="Razão Social" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.email">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-envelope-o fa-1x"></span>
                                        </span>
                                        <input id="osc_email" asp-for="@Model.cliente.email" type="email" class="form-control" placeholder="Email" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.sexo">Sexo</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-list-ul fa-1x"></span>
                                        </span>
                                        <select id="osc_sexo" asp-for="@Model.cliente.sexo" class="form-control">
                                            <option value="1" selected="">Masculino</option>
                                            <option value="2">Feminino</option>
                                            <option value="3">Outros</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.telefone">Telefone</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-phone fa-1x"></span>
                                        </span>
                                        <input id="osc_telefone" asp-for="@Model.cliente.telefone" type="text" class="form-control" placeholder="(XX) - 000000000" maxlength="15" pattern="[0-9]+$" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.celular">Celular</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-mobile-phone fa-1x"></span>
                                        </span>
                                        <input id="osc_celular" asp-for="@Model.cliente.celular" type="text" class="form-control" placeholder="(XX) - 000000000" maxlength="15" pattern="[0-9]+$" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="@Model.cliente.anotacao">Anotação</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-comment-o fa-1x"></span>
                                        </span>
                                        <textarea id="osc_anotacao" asp-for="@Model.cliente.anotacao" class="form-control" rows="9" cols="25" placeholder="digite uma anotação"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.cliente.criadoPorName">Criado Por</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-user"></span>
                                </span>
                                <input id="osc_criadoPor" asp-for="@Model.cliente.criadoPorName" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.cliente.criadoEm">Criado Em</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                                <input id="osc_criadoEm" asp-for="@Model.cliente.criadoEm" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.cliente.status">Status</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-exclamation"></span>
                                </span>
                                <input id="osc_status" asp-for="@Model.cliente.status" type="text" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
         
            <div class="card card-success" id="osc_endereco">
                <div class="card-header card-success">
                    <div class="card-title">
                        <table>
                            <tr>
                                <td><h5>Endereços:&nbsp;</h5></td>
                                <td>
                                    <div id="barra_acoes_endereco">
                                        <label>
                                            <button id="osc_endereco" type="button" class="btn btn-info btn-lg fa fa-1x fa-plus" value="Novo Endereço" onclick="location.href='@Url.Action("FormCreateEndereco", "Endereco", new { idCliente = @Model.cliente.id, NomeCliente = @Model.cliente.nomeCliente })'"> <span>Novo</span></button>
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Logradouro</th>
                                <th>Número</th>
                                <th>Cep</th>                                 
                                <th>Cidade</th>
                                <th>Tipo</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model.enderecos)
                        {
                            <tr>
                                <td>@Html.ActionLink(item.logradouro.ToString(), "FormUpdateEndereco", "Endereco", new { id = item.id })</td>
                                <td>@item.numero</td>
                                <td>@item.cep</td>
                                <td>@item.bairro</td>                               
                                <td>@item.TipoEndereco</td>

                            </tr>
                        }

                    </table>
                </div>
            </div>
