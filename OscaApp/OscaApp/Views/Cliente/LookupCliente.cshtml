@model X.PagedList.PagedList<OscaApp.Models.Cliente>
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@

<script type="text/javascript">

    //Função para tratamento do Lookup padrão do Cliente
    function ConfigLookupCliente(id, name) {       
               
            var idCliente =  document.getElementById("osc_clienteId");
            var idClienteName =  document.getElementById("osc_clienteIdName");
            idCliente.value = id;
            idClienteName.value = name;
            $('#lookupCliente').modal('hide');          
    }
</script>



<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Fechar</span></button>          
        </div>
        <div class="modal-body">
            <div class="card" id="osc_Lookup">
                <div class="card-header">
                    <div class="card-title">
                        <table>
                            <tr>
                                <td>
                                    <h5 style="font-weight:bold">Lista de Clientes: &nbsp;&nbsp;</h5>
                                </td>
                                <td>
                                    <form class="form-inline">
                                        <div class="form-group  col-md-5">
                                            <div class="input-group">
                                                @Html.TextBox("filtro", "", new { @class = "form-control ", @style = "max-width:none;", placeholder = "Pesquisar", id = "grid" })
                                                <span class="input-group-btn ">
                                                    <button type="submit" class="btn btn-info">
                                                        <span class="fa fa-search"></span>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <button id="osc_recarregar" type="submit" class="btn btn-info btn-lg fa fa-remove" value="Limpar" onclick="RecarregarGrid()"> <span>Limpar</span></button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-11">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Código</th>
                                            <th>Cliente</th>
                                            <th>CNPJ/CPF</th>
                                            <th>Tipo de Pessoa</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr  id="@item.id" value="@item.nomeCliente" onclick="ConfigLookupCliente('@item.id.ToString()','@item.nomeCliente.ToString()')" >
                                            <td>@item.codigo</td>                                             
                                            <td>@item.nomeCliente</td>
                                            <td>@item.cnpj_cpf</td>
                                            <td>@item.tipoPessoa</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>      
    </div> 
</div> 
 

