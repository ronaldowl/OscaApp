@model OscaApp.ViewModels.IncidenteViewModel
<div id="contexto">
    @Html.HiddenFor(m => m.Contexto.idOrganizacao)
    @Html.HiddenFor(m => m.Contexto.organizacao)
    @Html.HiddenFor(m => m.Contexto.idUsuario)
    @Html.HiddenFor(m => m.Contexto.nomeUsuario)
    @Html.HiddenFor(m => m.Incidente.id)
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9 offset-1">
            @if (!String.IsNullOrEmpty(Model.StatusMessage))
            {

                <div class="alertPers alert alert-success alert-dismissible alert-dismissiblePers" role="alert">
                    <button type="button" class="closePers close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @Model.StatusMessage
                </div>
            }
            <form action="FormUpdateIncidente" method="post">
                <div class="card" id="osc_MainForm">
                    <div class="card-header">
                        <div class="card-title">
                            <table>
                                <tr>
                                    <td><h3>Alterar dados:&nbsp;&nbsp;</h3></td>
                                    <td>
                                        <div id="osc_barrabotoes">
                                            <label>
                                                <button id="osc_salvar" type="submit" class="btn btn-info btn-sm fa fa-1x fa-floppy-o" value="Salvar"> <span>Salvar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_fechar" type="button" class="btn btn-info  btn-sm fa fa-1x fa-close" value="Fechar" onclick="location.href='@Url.Action("GridIncidente", "Incidente" , null)'"> <span>Fechar</span></button>
                                            </label>
                                            <label>
                                                <button id="osc_novo" type="button" class="btn btn-info  btn-sm fa fa-1x fa-plus" value="Novo" onclick="location.href='@Url.Action("FormCreateIncidente", "Incidente", null)'"> <span>Novo</span></button>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <input id="osc_id" asp-for="Incidente.id" type="hidden" class="form-control" value="@Model.Incidente.id" />
                            <div class="col-md-4 offset-1">
                                <div class="form-group">
                                    <label>Código</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <table>
                                                <tr>
                                                    <td><span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span></td>&nbsp;
                                                    <td><input id="osc_codigo" asp-for="@Model.Incidente.codigo" class="form-control" type="text" disabled="disabled"></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 offset-1">
                                <div class="form-group">
                                    <label>TÍtulo</label>
                                    <div class="inputGroupContainer">
                                        <div class="input-group">
                                            <table>
                                                <tr>
                                                    <td><span class="input-group-addon"><i class="fa fa-asterisk fa-2x"></i></span></td>&nbsp;
                                                    <td><input id="osc_nome" asp-for="@Model.Incidente.titulo" class="form-control" type="text"></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 offset-1">
                                <div class="form-group">
                                    <label>Descrição</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-comment-o fa-2x"></span>&nbsp;
                                        </span>
                                        <textarea id="osc_descricao" asp-for="@Model.Incidente.descricao" class="form-control" rows="4" cols="4" placeholder="digite a descrição do problema"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br /><br /><br /><br />
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Criado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoPor" asp-for="@Model.Incidente.criadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Criado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_criadoEm" asp-for="@Model.Incidente.criadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Modificado Por</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-2x fa-user"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoPor" asp-for="@Model.Incidente.modificadoPorName" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Modificado Em</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar fa-2x"></span>
                                        </span> &nbsp;
                                        <input id="osc_modificadoEm" asp-for="@Model.Incidente.modificadoEm" type="text" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

